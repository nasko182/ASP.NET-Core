@model PostFormViewModel

@{
    ViewBag.Title = "Delete Post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Write your title here..." readonly="readonly">
                <span asp-validation-for="@Model.Title" class="small textdanger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" placeholder="Write your post here..." disabled="disabled">
                <span asp-validation-for="@Model.Content" class="small textdanger"></span>
            </div>
        </div>
        <input class="btn btn-danger mt-3" type="submit" value="Delete" onclick="return confirm('Are you shure you want to remove this post')" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }